
PROGRAM=	write
SRCS=		write.c

#ifdef ultrix
DEST=/usr/bin
#else
DEST=/bin
#endif

build_program(write,write.c,,)
install_program(write,-g tty -m 2755,$(DEST)/write)


#ifdef ultrix
install::
	rm -f ${DESTDIR}/bin/${PROGRAM}
	ln -s ../usr/bin/${PROGRAM} ${DESTDIR}/bin/${PROGRAM}
#endif

tags::
	ctags -tdw *.c 

clean::
	rm -f ${PROGRAM} a.out core *.s *.o made


depend:: 
	touch Make.depend; makedepend -fMake.depend -o "" -s "# DO NOT DELETE THIS LINE -- make depend uses it"\
		${CFLAGS} ${SRCS}

